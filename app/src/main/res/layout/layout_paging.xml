<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnPrevious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/small_100"
                android:layout_marginVertical="@dimen/small_50"
                android:contentDescription="@string/previous"
                android:drawableLeft="@drawable/ic_arrow_left_24"
                android:drawableTint="@color/primaryTextColor"
                android:src="@drawable/ic_arrow_left_24"
                android:text="@string/prev"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/llPageNumberContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnNext"
                app:layout_constraintStart_toEndOf="@id/btnPrevious"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvPagePlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/small_50"
                    android:text="@string/page"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="18sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvPageCurrent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/small_50"
                    android:text="1"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="18sp"
                    tools:text="1" />

                <TextView
                    android:id="@+id/tvOf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginEnd="@dimen/small_50"
                    android:text="of "
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvPageLast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/small_50"
                    android:text="24"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="18sp"
                    tools:text="24" />
            </LinearLayout>

            <Button
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/small_100"
                android:layout_marginVertical="@dimen/small_50"
                android:contentDescription="@string/next"
                android:drawableEnd="@drawable/ic_arror_right_24"
                android:drawableTint="@color/primaryTextColor"
                android:text="@string/next"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</layout>