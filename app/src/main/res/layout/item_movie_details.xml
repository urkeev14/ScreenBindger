<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.screenbindger.util.constants.ConstantsKt" />

        <variable
            name="movie"
            type="com.example.screenbindger.model.domain.movie.MovieEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivMoviePoster"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:contentDescription="@string/movie_poster"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:posterPlaceholder="@{movie.backdropPathPlaceholder}"
            app:posterSize="@{ConstantsKt.POSTER_SIZE_ORIGINAL}"
            app:posterUrl="@{movie.bigPosterUrl}"
            tools:src="@drawable/video_player" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvMovieTitle"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_100"
            android:layout_marginTop="@dimen/normal_100"
            android:text="@{movie.title}"
            app:fontFamily="@font/cardo"
            app:layout_constraintEnd_toStartOf="@+id/btnWatchTrailer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivMoviePoster"
            tools:text="Movie Title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvMovieGenres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_100"
            android:layout_marginTop="@dimen/small_50"
            android:text="@{movie.genresString}"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMovieTitle"
            tools:text="Genre 1, Genre 2, Genre 3" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvRatingPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_100"
            android:layout_marginTop="@dimen/normal_100"
            android:text="@string/rating_placeholder"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMovieGenres" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvMovieRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_50"
            android:text="@{String.valueOf(movie.rating)}"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tvRatingPlaceholder"
            app:layout_constraintStart_toEndOf="@id/tvRatingPlaceholder"
            app:layout_constraintTop_toTopOf="@id/tvRatingPlaceholder"
            tools:text="7.4" />

        <TextView
            android:id="@+id/tvWatchTrailerPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/small_100"
            android:text="Watch trailer"
            app:layout_constraintBottom_toBottomOf="@id/btnWatchTrailer"
            app:layout_constraintEnd_toStartOf="@id/btnWatchTrailer"
            app:layout_constraintTop_toTopOf="@id/btnWatchTrailer" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnWatchTrailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/normal_100"
            android:backgroundTint="@color/defaultButtonColor"
            android:elevation="@dimen/normal_100"
            android:src="@drawable/youtube"
            android:tint="@color/defaultBackground"
            app:borderWidth="0dp"
            app:fabSize="mini"
            app:layout_constraintBottom_toBottomOf="@+id/fabInstagram"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fabInstagram" />

        <com.borjabravo.readmoretextview.ReadMoreTextView
            android:id="@+id/tvMovieDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="@dimen/normal_100"
            android:layout_marginBottom="@dimen/normal_100"
            android:justificationMode="inter_word"
            android:text="@{movie.description}"
            android:textSize="14sp"
            app:colorClickableText="#FF0000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRatingPlaceholder"
            app:showTrimExpandedText="true"
            app:trimCollapsedText="@string/show_more"
            app:trimExpandedText="@string/show_less"
            app:trimLength="100"
            app:trimMode="trimModeLength"
            tools:targetApi="o"
            tools:text="@string/lorem" />

        <TextView
            android:id="@+id/tvShareToPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_100"
            android:layout_marginTop="@dimen/large_100"
            android:text="@string/share_to_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMovieDescription" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabInstagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_100"
            android:backgroundTint="@color/defaultButtonColor"
            android:src="@drawable/ic_instagram"
            app:borderWidth="0dp"
            app:fabSize="mini"
            app:layout_constraintBottom_toBottomOf="@id/tvShareToPlaceholder"
            app:layout_constraintStart_toEndOf="@id/tvShareToPlaceholder"
            app:layout_constraintTop_toTopOf="@id/tvShareToPlaceholder" />

        <TextView
            android:id="@+id/tvCastPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/normal_100"
            android:layout_marginStart="@dimen/normal_100"
            android:text="@string/cast_placeholder"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvShareToPlaceholder" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>