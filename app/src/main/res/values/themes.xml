<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScreenBindger" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <!-- Default TextInputLayout style-->
        <item name="textInputStyle">@style/Widget.ScreenBindger.TextInputLayout</item>
        <item name="fontFamily">@font/fjord_one</item>
        <item name="android:fontFamily">@font/fjord_one</item>

        <item name="floatingActionButtonStyle">
            @style/Widget.ScreenBindger.FloatingActionButton
        </item>


    </style>

    <!-- AppTheme NoActionbar-->
    <style name="Theme.ScreenBindger.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- TextInputLayout styling-->
    <style name="Widget.ScreenBindger.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/large_125</item>
        <item name="android:paddingBottom">@dimen/small_100</item>
        <item name="hintTextAppearance">@style/TextAppearance.ScreenBindger.HintText</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <!-- Hint text style-->
    <style name="TextAppearance.ScreenBindger.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <!-- TextInputEditText styling-->
    <style name="Widget.ScreenBindger.TextInputEditText" parent="android:Widget.EditText">
        <item name="android:paddingStart">@dimen/normal_100</item>
        <item name="autoSizeMinTextSize">@dimen/small_100</item>
        <item name="autoSizeStepGranularity">1px</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="Widget.ScreenBindger.ImageView.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Rating bar styling-->
    <style name="Widget.ScreenBindger.RatingBar" parent="">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/rating_bar</item>
    </style>

    <style name="Widget.ScreenBindger.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:iconTint" tools:targetApi="o">?attr/colorOnPrimary</item>
    </style>
</resources>