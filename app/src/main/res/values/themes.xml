<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScreenBindger" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <!-- Default status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryDarkColor</item>

        <!-- Default background color-->
        <item name="backgroundColor">@color/defaultBackground</item>
        <item name="android:colorBackground">@color/defaultBackground</item>

        <!-- Default TextInputLayout style-->
        <item name="textInputStyle">@style/Widget.ScreenBindger.TextInputLayout</item>
        <item name="fontFamily">@font/cardo</item>
        <item name="android:fontFamily">@font/cardo</item>
    </style>

    <!-- AppTheme NoActionbar-->
    <style name="Theme.ScreenBindger.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Hint text style-->
    <style name="TextAppearance.ScreenBindger.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <!-- Widget shape appearance 'NoCut'-->
    <style name="Widget.ScreenBindger.ShapeAppearance.NoCut" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
    </style>

    <!-- TextInputLayout styling-->
    <style name="Widget.ScreenBindger.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/Widget.ScreenBindger.ShapeAppearance.NoCut</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/large_125</item>
        <item name="android:paddingBottom">@dimen/small_100</item>
        <item name="hintTextAppearance">@style/TextAppearance.ScreenBindger.HintText</item>
        <item name="hintTextColor">@color/primaryDarkColor</item>
        <item name="boxStrokeColor">@color/text_input_layout_box_stroke_color</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <!-- TextInputEditText styling-->
    <style name="Widget.ScreenBindger.TextInputEditText" parent="android:Widget.EditText">
        <item name="android:paddingStart">@dimen/normal_100</item>
        <item name="autoSizeMinTextSize">@dimen/small_100</item>
        <item name="autoSizeStepGranularity">1px</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <!-- Outlined button styling-->
    <style name="Widget.ScreenBindger.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/Widget.ScreenBindger.ShapeAppearance.NoCut</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/large_100</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/small_125</item>
        <item name="android:backgroundTint">@color/defaultButtonColor</item>
    </style>

    <style name="Widget.ScreenBindger.ImageView.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>